appearance()
  appearance: none
  -webkit-appearance: none
  -moz-appearance: none

button()
  appearance()
  display: inline-block
  width: 100%
  height: 40px
  outline: none
  border: none
  border-top: 1px dotted colors.emperor
  background: transparent
  color: colors.razzmatazz
  text-transform: uppercase

checkout_button()
  display: inline-block
  vertical-align: middle
  height: 28px
  line-height: 28px
  font-size: 10px
  letter-spacing: 1px
  text-align: right
  text-transform: uppercase
